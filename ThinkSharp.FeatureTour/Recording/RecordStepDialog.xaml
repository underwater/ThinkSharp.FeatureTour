<Window x:Class="ThinkSharp.FeatureTouring.Recording.RecordStepDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Tour Step" 
        Height="450" Width="550"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D30"
        Foreground="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Add Tour Step"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Element Type:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding ElementType, RelativeSource={RelativeSource AncestorType=Window}}" 
                       Foreground="LightGray"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Element ID:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtElementId"
                     Text="{Binding ElementId, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                     Background="#3E3E42"
                     Foreground="White"
                     BorderBrush="#555"
                     Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Step Header (Title):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtHeader"
                     Background="#3E3E42"
                     Foreground="White"
                     BorderBrush="#555"
                     Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Step Content (Description):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtContent"
                     Background="#3E3E42"
                     Foreground="White"
                     BorderBrush="#555"
                     Padding="5"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Height="100"
                     VerticalAlignment="Stretch"/>
        </StackPanel>

        <TextBlock Grid.Row="5" 
                   Text="ðŸ’¡ Tip: Write clear, actionable instructions for users"
                   Foreground="LightBlue"
                   FontStyle="Italic"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Add Step" 
                    Click="BtnAdd_Click"
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Skip" 
                    Click="BtnSkip_Click"
                    Width="100" 
                    Height="30"
                    Background="#555"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

