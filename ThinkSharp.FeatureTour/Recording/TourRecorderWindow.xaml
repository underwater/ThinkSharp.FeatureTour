<Window x:Class="ThinkSharp.FeatureTouring.Recording.TourRecorderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tour Recorder" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RecorderButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎥 Tour Recorder" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Click 'Start Recording' to begin capturing tour steps" 
                               FontSize="12"
                               Margin="0,5,0,0"
                               Opacity="0.8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnStartRecording" 
                            Content="▶ Start Recording"
                            Click="BtnStartRecording_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="15,8"
                            BorderThickness="0"/>
                    
                    <Button x:Name="BtnStopRecording" 
                            Content="⏹ Stop Recording"
                            Click="BtnStopRecording_Click"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="15,8"
                            BorderThickness="0"
                            IsEnabled="False"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Steps List -->
            <Border Grid.Column="0" 
                    Background="#252526" 
                    BorderBrush="#3E3E42" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="#2D2D30" 
                            BorderBrush="#3E3E42" 
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <TextBlock Text="Recorded Steps" 
                                   FontSize="14" 
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <ListBox x:Name="StepsList" 
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="StepsList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1"
                                        Margin="5"
                                        Padding="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" 
                                                   Foreground="LightGray"
                                                   FontSize="10">
                                            <Run Text="Step "/>
                                            <Run Text="{Binding StepNumber}"/>
                                            <Run Text=" • "/>
                                            <Run Text="{Binding ElementType}"/>
                                            <Run Text=" • ID: "/>
                                            <Run Text="{Binding ElementId}" FontWeight="Bold"/>
                                        </TextBlock>
                                        
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Header}" 
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="0,5,0,5"
                                                   TextWrapping="Wrap"/>
                                        
                                        <TextBlock Grid.Row="2" 
                                                   Text="{Binding Content}" 
                                                   TextWrapping="Wrap"
                                                   Foreground="LightGray"
                                                   FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel Grid.Row="1"
                                x:Name="EmptyState"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="Visible">
                        <TextBlock Text="📝" 
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Opacity="0.3"/>
                        <TextBlock Text="No steps recorded yet" 
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Opacity="0.5"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="Click 'Start Recording' and then click on UI elements" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Opacity="0.4"
                                   Margin="0,5,0,0"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#3E3E42"/>
            
            <!-- Actions Panel -->
            <Border Grid.Column="2" 
                    Background="#252526" 
                    BorderBrush="#3E3E42" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="#2D2D30" 
                            BorderBrush="#3E3E42" 
                            BorderThickness="0,0,0,1"
                            Padding="10">
                        <TextBlock Text="Actions" 
                                   FontSize="14" 
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <StackPanel Grid.Row="1" Margin="10">
                        <TextBlock Text="Step Actions" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <Button Content="➕ Add Step Manually"
                                Click="BtnAddStep_Click"
                                Style="{StaticResource RecorderButton}"/>
                        
                        <Button x:Name="BtnEditStep"
                                Content="✏️ Edit Selected Step"
                                Click="BtnEditStep_Click"
                                Style="{StaticResource RecorderButton}"
                                IsEnabled="False"/>
                        
                        <Button x:Name="BtnDeleteStep"
                                Content="🗑️ Delete Selected Step"
                                Click="BtnDeleteStep_Click"
                                Style="{StaticResource RecorderButton}"
                                IsEnabled="False"/>
                        
                        <Separator Margin="0,15" Background="#3E3E42"/>
                        
                        <TextBlock Text="Reorder Steps" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <Button x:Name="BtnMoveUp"
                                Content="⬆️ Move Up"
                                Click="BtnMoveUp_Click"
                                Style="{StaticResource RecorderButton}"
                                IsEnabled="False"/>
                        
                        <Button x:Name="BtnMoveDown"
                                Content="⬇️ Move Down"
                                Click="BtnMoveDown_Click"
                                Style="{StaticResource RecorderButton}"
                                IsEnabled="False"/>
                        
                        <Separator Margin="0,15" Background="#3E3E42"/>
                        
                        <TextBlock Text="Tour Details" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Tour Name:" 
                                   FontSize="11" 
                                   Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtTourName"
                                 Text="My Tour"
                                 Background="#3E3E42"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 Padding="5"
                                 Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Tour ID:" 
                                   FontSize="11" 
                                   Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtTourId"
                                 Text="my-tour"
                                 Background="#3E3E42"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 Padding="5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#2D2D30" 
                BorderBrush="#3E3E42" 
                BorderThickness="0,1,0,0"
                Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="💡 Tip: " 
                               Foreground="LightBlue" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Start recording, click UI elements, fill in details for each step, then generate your tour code"
                               Foreground="LightGray"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔄 Clear All"
                            Click="BtnClearAll_Click"
                            Style="{StaticResource RecorderButton}"/>
                    
                    <Button Content="▶ Preview Tour"
                            Click="BtnPreviewTour_Click"
                            Style="{StaticResource RecorderButton}"
                            Background="#FF9800"
                            FontWeight="Bold"
                            ToolTip="Test the recorded tour immediately"/>
                    
                    <Button Content="📄 Generate C# Code"
                            Click="BtnGenerateCode_Click"
                            Style="{StaticResource RecorderButton}"
                            Background="#4CAF50"
                            FontWeight="Bold"/>
                    
                    <Button Content="📋 Generate JSON"
                            Click="BtnGenerateJson_Click"
                            Style="{StaticResource RecorderButton}"
                            Background="#2196F3"
                            FontWeight="Bold"/>
                    
                    <Button Content="Close"
                            Click="BtnClose_Click"
                            Style="{StaticResource RecorderButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

